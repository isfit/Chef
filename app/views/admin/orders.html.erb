<div class="span12">
  <h1>Alle bestillinger for <%= params[:date] %></h1>



  <%= form_tag "orders", method: "post" do %>
    <div class="control-group controls" >
      <%= select_tag :date, '<option>2013-02-07</option><option>2013-02-08</option><option>2013-02-09</option><option>2013-02-10</option><option>2013-02-11</option><option>2013-02-12</option><option>2013-02-13</option><option>2013-02-14</option><option>2013-02-15</option><option>2013-02-16</option><option>2013-02-17</option>'.html_safe %>
      <%= submit_tag "Reload", class: "btn btn-primary" %>
      <div class="btn-group">
        <%= link_to admin_orders_url(:format => :pdf, :date => params[:date]), class:"btn btn-primary" do %>
          <i class="icon-print"></i> Generer ordre for pakking
        <% end %>
      </div>
    </div>
  <% end %>

  <h2>Totalt denne dagen</h2>
  <table class="table">
    <tr>
      <th>Meal</th>
      <th>Amount</th>
    </tr>
    <% @meal_types.each do |meal| %>
      <tr>
        <td><%= meal[0] %></td>
        <td><%= meal[1] %></td>
        <tr>
        <% end %>
      </table>
      <br/>
      <table class="table">
        <tr>
          <th>Delivery to:</th>
          <th>Delivered at</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @orders.each do |order| %>
          <tr>
            <td><%= order.deliver_to %></td>
            <td><%= order.delivered_at %></td>
            <td><%= link_to 'Show', order %></td>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% order.meals.each do |meal| %>
            <tr>
              <td><%= meal.meal_type.title %></td>
              <td><%= meal.amount %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
